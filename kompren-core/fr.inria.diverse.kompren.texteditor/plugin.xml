<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>

<plugin>
   <extension point="org.eclipse.ui.newWizards">
      <category
            id="fr.inria.diverse.kompren.texteditor"
            name="Kompren"
            parentCategory="fr.inria.diverse.kompren.wizard">
      </category>
      <wizard
            category="fr.inria.diverse.kompren.wizard"
            class="fr.inria.diverse.kompren.texteditor.wizards.SampleNewWizard"
            icon="icons/sample.gif"
            id="org.kermeta.kompren.slicer.texteditor.wizards.SampleNewWizard"
            name="Kompren Textual Model">
      </wizard> 
   </extension>
   
   <extension point="org.eclipse.ui.editors">
      <editor
      		id="fr.inria.diverse.kompren.texteditor.editors.KomprenEditorID"
            name="Kompren Textual Editor"
            icon="icons/sample.gif"
            extensions="komprent"
            class="fr.inria.diverse.kompren.texteditor.editors.KomprenEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor">
      </editor>
   </extension>
</plugin>
